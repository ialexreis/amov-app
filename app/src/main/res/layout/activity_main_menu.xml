<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pt.isec.agileMath.activities.MainMenuActivity">

    <TextView
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_gravity="top|center"
        android:textSize="55sp"
        android:textStyle="italic|bold"
        />

    <ImageView
        android:layout_marginTop="200sp"
        android:layout_width="250sp"
        android:layout_height="250sp"
        android:background="@drawable/front_image"
        android:layout_gravity="top|center"
        tools:ignore="ContentDescription" />


    <LinearLayout
        android:layout_gravity="center_horizontal|bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="30dp"
        android:paddingHorizontal="42dp">
        <Button
            android:id="@+id/btnSinglePlayer"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:onClick="onSimpleGame"
            android:text="@string/new_game" />
        <Button
            android:id="@+id/btnMultiplayer"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:onClick="onMultiplayerGame"
            android:text="@string/new_game_two_players"/>
        <Button
            android:id="@+id/btnEditProfile"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:onClick="onEditProfile"
            android:text="@string/profile"/>
    </LinearLayout>
</FrameLayout>

